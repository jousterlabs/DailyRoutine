<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jousterlabs.dailyroutine"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/stock_task"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.jousterlabs.dailyroutine.SplashScreenActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.jousterlabs.dailyroutine.SwitchboardActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="ListTaskActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden" >
        </activity>
        <activity
            android:name="ViewTaskActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="HistoryTaskActivity"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>